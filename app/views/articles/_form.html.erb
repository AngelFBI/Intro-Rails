<div class="container">
  <div class="justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder:"Title of the Article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder:"Description of the Article" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
      <%= link_to 'Return', articles_path, class: "btn btn-outline-info btn-lg" %>
    </div>
  </div>
</div>
