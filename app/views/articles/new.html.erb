<h1>Create a new article</h1>

<%# scope calls the model that we are working with %>
<%= form_with scope: :article, url: :articles, local: true do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description%>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
